<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:gravity="center"
        tools:context=".AddMovieActivity">

    <EditText
            android:id="@+id/edt_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Movie Name"/>

    <EditText
            android:id="@+id/edt_movie_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Movie Description"/>

    <Button
            android:id="@+id/btn_addImage_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select IMAGE"/>

    <ImageView
            android:id="@+id/iv_selectedImage"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:visibility="gone"/>

    <Button
            android:id="@+id/btn_addMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah FILM"/>




</LinearLayout>